{% extends "BisonLabProductMasterBundle::layout.html.twig" %}

{% block content %}

<h1>ProductCatalog list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Product name</th>
            <th>External product-id</th>
            <th>External product name</th>
            <th>External product description</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('product_show', { 'id': entity.product.id }) }}"> {{ entity.product.name }}</a></td>
            <td>{{ entity.externalproductid }}</td>
            <td>{{ entity.externalproductname }}</td>
            <td>{{ entity.externalproductdescription }}</td>
            <td>{{ entity.createdat|date("Y-m-d H:i")  }}</td>
            <td>{{ entity.updatedat|date("Y-m-d H:i")  }}</td>
            <td>                   <a href="{{ path('productcatalog_show', { 'id': entity.id }) }}">show</a>                   <a href="{{ path('productcatalog_edit', { 'id': entity.id }) }}">edit</a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('productcatalog_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}
