{% extends "BisonLabProductMasterBundle::layout.html.twig" %}

{% block content %}

<h1>Catalog</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Identifier</th>
            <td>{{ entity.identifier }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Originating_from</th>
            <td>{{ entity.originatingfrom }}</td>
        </tr>
        <tr>
            <th>External_id</th>
            <td>{{ entity.externalid }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('catalog') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('catalog_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('catalog_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
