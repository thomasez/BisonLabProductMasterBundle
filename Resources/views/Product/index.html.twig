{% extends "BisonLabProductMasterBundle::layout.html.twig" %}

{% block content %}

<h1>Product list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Identifier</th>
            <th>Name</th>
            <th>Description</th>
            <th>Long description</th>
            <th>Product type</th>
            <th>One time price</th>
            <th>Subscription price</th>
            <th>Sale start</th>
            <th>Sale end</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.identifier }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.longdescription }}</td>
            <td>{{ entity.producttype }}</td>
            <td>{{ entity.onetimeprice }}</td>
            <td>{{ entity.subscriptionprice }}</td>
            <td>
                {% if entity.salestart  %}
                {{ entity.salestart|date("Y-m-d H:i")  }}
                {% endif %}
            </td>
            <td>
                {% if entity.saleend  %}
                {{ entity.saleend|date("Y-m-d H:i")  }}
                {% endif %}
            </td>
            <td>
                {% if entity.startdate  %}
                {{ entity.startdate|date("Y-m-d H:i")  }}
                {% endif %}
            </td>
            <td>
                {% if entity.enddate  %}
                {{ entity.enddate|date("Y-m-d H:i")  }}
                {% endif %}
            </td>
            <td>
                <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>            
                <a href="{{ path('productcampaign_list_by_campaign', { 'id': entity.id }) }}">Campaign listing</a>            
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('product_new') }}">
            Create a new product
        </a>
    </li>
</ul>

{% endblock %}
