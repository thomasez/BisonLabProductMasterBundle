{% extends "BisonLabProductMasterBundle::layout.html.twig" %}

{% block content %}

<h1>ProductCampaign</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.createdat|date("Y-m-d H:i")  }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ entity.updatedat|date("Y-m-d H:i")  }}</td>
        </tr>
        <tr>
            <th>Created_by</th>
            <td>{{ entity.createdby }}</td>
        </tr>
        <tr>
            <th>Updated_by</th>
            <td>{{ entity.updatedby }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('productcampaign') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('productcampaign_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('productcampaign_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
